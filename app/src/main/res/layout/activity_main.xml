<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bengaehle.collectory.MainActivity">

        <Button
            android:id="@+id/main_button_view"
            android:layout_width="200dp"
            android:layout_height="96dp"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/main_button_modify"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/main_button_text_view"
            />

        <Button
            android:id="@+id/main_button_modify"
            android:layout_width="200dp"
            android:layout_height="96dp"
            app:layout_constraintTop_toBottomOf="@+id/main_button_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/main_button_text_modify"
            />

</android.support.constraint.ConstraintLayout>
